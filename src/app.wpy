<script>
import wepy from 'wepy'
import 'wepy-async-function'
import Promise from 'promise-polyfill'

import sceneCd from './services/scene'
import moment from "moment"; 
import 'moment/locale/zh-cn'
moment.locale("zh-cn");

export default class extends wepy.app { 
	config = {
		pages: [
			'pages/index', 
			'pages/addedit',
			'pages/my', 
			'pages/webview'
		],
		window: {
			backgroundTextStyle: 'dark',
			navigationBarBackgroundColor: '#000000',
			navigationBarTitleText: '',
			navigationBarTextStyle: 'white'
		},
		"tabBar": {
			"color": "#a2a2a2",  
			"selectedColor": "#f08200", 
			"backgroundColor": "#ffffff",
			"borderStyle": "black",
			"list": [{
				"pagePath": "pages/index",
				"text": "首页",
				"iconPath":"static/tabBar-icon01.png",
				"selectedIconPath":"static/tabBar-icon01-2.png"
			}, {
				"pagePath": "pages/my",
				"text": "个人中心",
				"iconPath":"static/tabBar-icon02.png",
				"selectedIconPath":"static/tabBar-icon02-2.png"
			}] 
		}
	}

	globalData = {
		userInfo: null
	}

	constructor () {
		super()
		this.use('requestfix')
		this.use('promisify');
	}
	
	onLaunch(opt) {

		opt.scene=sceneCd(opt.scene)
		console.log('app',opt)
	}

	sleep (s) {
		return new Promise((resolve, reject) => {
			setTimeout(() => {
				resolve('promise resolved')
			}, s * 1000)
		})
	}

	getUserInfo(cb) {
		var that=this
		if (this.globalData.userInfo) {
			return this.globalData.userInfo
		}
		we.getUserInfo({
			success (res) {
				that.globalData.userInfo = res.userInfo
				cb && cb(res.userInfo)
			}
		})
	}
	onShow(){
		const updateManager = wx.getUpdateManager()

		updateManager.onCheckForUpdate(function (res) {
		// 请求完新版本信息的回调
		console.log(res.hasUpdate)
		})

		updateManager.onUpdateReady(function () {
		wx.showModal({
			title: '更新提示',
			content: '新版本已经准备好，是否重启应用？',
			success: function (res) {
			if (res.confirm) {
				// 新的版本已经下载好，调用 applyUpdate 应用新版本并重启
				updateManager.applyUpdate()
			}
			}
		})
		})

		updateManager.onUpdateFailed(function () {
		// 新版本下载失败
		})
	}
}
</script>
